<form class="" {{on "submit" this.login}}>
  <div class="row mb-3">
    <label for="mu-login-username" class="col-sm-3 col-form-label">Username</label>
    <div class="col-sm-9">
      <Input
        id="mu-login-username"
        @value={{this.nickname}}
        placeholder={{@placeholder}}
        class="form-control"/>
    </div>
  </div>
  <div class="row mb-3">
    <label for="mu-login-password" class="col-sm-3 col-form-label">Password</label>
    <div class="col-sm-9">
      <Input
        id="mu-login-password"
        @value={{this.password}}
        @type="password"
        class="form-control"/>
    </div>
  </div>
  <div class="row">
    {{#if this.isAuthenticating}}
      <div class="alert alert-light" role="alert">
        Verifying credentials
      </div>
    {{/if}}
    {{#if this.errorMessage}}
      <div class="alert alert-danger" role="alert">
        {{this.errorMessage}}
      </div>
    {{/if}}
  </div>
  {{#if this.isAuthenticating}}
    <button type="submit"
      disabled={{true}}
      class="btn btn-primary">
      {{this.label}}
    </button>
  {{else}}
    <button type="submit"
      class="btn btn-primary">
      {{this.label}}
    </button>
  {{/if}}
</form>