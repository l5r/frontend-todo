<form {{on "submit" this.createTodo}} class="mx-auto row g-3 align-items-end mt-3 mw-medium">
  <div class="col-12 col-md-6">
    <label for="new-todo-title">Title</label>
    <Input id="new-todo-title" @value={{this.newTitle}} placeholder="Something important" class="form-control"/>
  </div>
  <div class="col-12 col-md-6">
    <label for="new-todo-deadline">Deadline</label>
    <Input id="new-todo-deadline" @value={{this.newDeadline}} @type="datetime-local" class="form-control"/>
  </div>
  <div class="col-12">
    <button type="submit" class="btn btn-primary">Add</button>
  </div>
</form>
