{{!-- template-lint-disable no-action --}}
<form class="registration-form" {{action "register" on="submit"}}>
  <div class="row mb-3">
    <label class="col-sm-3 col-form-label">
      Name
    </label>
    <div class="col-sm-9">
      <Input @value={{this.name}} placeholder="John Doe" class="form-control"/>
    </div>
  </div>
  <div class="row mb-3">
    <label class="col-sm-3 col-form-label">
      Username
    </label>
    <div class="col-sm-9">
      <Input @value={{this.nickname}} placeholder="john.doe" class="form-control"/>
    </div>
  </div>
  <div class="row mb-3">
    <label class="col-sm-3 col-form-label">
      Password
    </label>
    <div class="col-sm-9">
      <Input @value={{this.password}} @type="password" class="form-control"/>
    </div>
  </div>
  <div class="row mb-3">
    <label class="col-sm-3 col-form-label">
      Confirm password
    </label>
    <div class="col-sm-9">
      <Input @value={{this.passwordConfirmation}} @type="password" class="form-control"/>
    </div>
  </div>
  <div class="row">
    {{#if this.loading}}
      <span class="alert alert-light" role="alert">Registering...</span>
    {{/if}}
    {{#if this.errorMessage}}
      <span class="alert alert-danger" role="alert">{{this.errorMessage}}</span>
    {{/if}}
  </div>
  <button type="submit" class="btn btn-primary">Register</button>
</form>