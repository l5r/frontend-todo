{{page-title "File Index"}}

<Ui::Table
  @content={{@model}}
  @fields="name format size created"
  @rowLink="files.file"
  @isLoading={{this.isLoadingModel}}
  @filter={{this.filter}}
  @sort={{this.sort}}
  @page={{this.page}}
  @size={{this.size}}
  @total={{this.total}}
  @updateFilter={{fn (mut this.filter)}}
  @updateSort={{fn (mut this.sort)}}
  @updatePage={{fn (mut this.page)}}
  @updatePageSize={{fn (mut this.size)}}>
  <:actions-header>
  <th></th>
  </:actions-header>
  <:actions as |actions| >
    <td>
    <button type="button" class="btn btn-danger btn-sm" {{on 'click' (fn this.delete actions.item)}}>
      Delete
    </button>
    </td>
  </:actions>
</Ui::Table>
